  <script>
    $(document).ready(function(){
      $('.carousel').carousel();
    });

    //intersecting observer for cards
    const cuisineCards = document.querySelectorAll('.cuisine-card');
    let observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible', 'animated');
        }
      });
    }, {
      threshold: 0.5
    });

    cuisineCards.forEach(card => observer.observe(card));

    // Disconnecting observer after all elements hav animated
    window.addEventListener('scroll', () => {
      const visibleElements = document.querySelectorAll('.cuisine-card.visible');
      if (visibleElements.length === cuisineCards.length) {
        observer.disconnect();
      }
    });
  </script>

